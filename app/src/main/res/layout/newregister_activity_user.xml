<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgorund"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <Spinner
                    android:id="@+id/spinSpin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_dropdown"
                    android:gravity="center_vertical"
                    android:textColorHint="#cccccc" />

                <LinearLayout
                    android:id="@+id/pinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvPinAmt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvPinname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/edSpinserId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:hint="Enter Sponsored id"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tvSponName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:background="@drawable/box"

                        android:maxLines="1"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_7" />


                </LinearLayout>

                <Button
                    android:id="@+id/btnGetSponId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/white"
                    android:background="@drawable/selector_xml_name"
                    android:gravity="center"
                    android:text="Get Name" />


                <LinearLayout
                    android:id="@+id/mainReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:visibility="gone">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edFname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/box"
                            android:padding="5dp"
                            android:gravity="center"
                            android:hint="First name"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorAccent" />

                        <EditText
                            android:id="@+id/edLname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/box"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Last name"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/box"
                            android:padding="5dp"
                            android:hint="Mobile"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorAccent" />

                        <EditText
                            android:id="@+id/edEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/box"
                            android:padding="5dp"
                            android:gravity="center"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorAccent" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:hint="Address"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edAdharCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:hint="Adhar card"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edPanCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:hint="Pan card"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edPhonPAy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:hint="Phon pay"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edGooglepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:hint="Google pay"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edPAsss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edConPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/box"
                        android:padding="5dp"
                        android:gravity="left"
                        android:hint="Confirm password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorAccent" />

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:background="@drawable/selector_xml_name"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="#fff" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>