<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <include layout="@layout/footer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="TRANSFER AMOUNT"
            android:textColor="#ff393939"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffb9b9b9" />

        <EditText
            android:id="@+id/trans_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:layout_marginTop="10dp"
            android:hint="Transfer Id"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/trans_amt_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="Transfer Amount"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnSubmit_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:padding="10dp"
            android:text="Submit"
            android:gravity="center"
            android:textColor="#fff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightreseved"
            android:text="All Rights Reserved @ Ethiqs Spaces Limited"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:textColor="#000000"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
            android:textColor="#000000"
            android:layout_marginTop="0dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>