<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_referal__master">


        <LinearLayout
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_orange_dark"
                        app:cardCornerRadius="@dimen/fragment_title_padding_10">

                        <LinearLayout
                            android:id="@+id/cardRegi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/selector_xml"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgview_regi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:src="@drawable/register" />

                                <TextView
                                    android:id="@+id/textreg"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"

                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/nav_item_registration"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_purple"
                        app:cardCornerRadius="@dimen/fragment_title_padding_10">

                        <LinearLayout
                            android:id="@+id/cardRefLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/selector_xml"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgview_refer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:src="@drawable/send" />

                                <TextView
                                    android:id="@+id/textrefer"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Refer / Send Link"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#666699"
                    app:cardCornerRadius="@dimen/fragment_title_padding_10">

                    <LinearLayout
                        android:id="@+id/cardTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_xml"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/imgview_userteam"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:src="@drawable/team" />

                            <TextView
                                android:id="@+id/textteam"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Team"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#993333"
                    app:cardCornerRadius="@dimen/fragment_title_padding_10">

                    <LinearLayout
                        android:id="@+id/cardDairect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_xml"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/imgview_direct"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:src="@drawable/direct" />

                            <TextView
                                android:id="@+id/textdirect"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Level"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#9cc2f2"
                    app:cardCornerRadius="@dimen/fragment_title_padding_10">

                    <LinearLayout
                        android:id="@+id/cardIncomeReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_xml"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/img_incomereport"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:src="@drawable/incomereport" />

                            <TextView
                                android:id="@+id/txtincomereport"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="History Report"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#85b28f"
                    app:cardCornerRadius="@dimen/fragment_title_padding_10">

                    <LinearLayout
                        android:id="@+id/cardIncomWalllet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_xml"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/imgview_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:src="@drawable/incomewallet" />

                            <TextView
                                android:id="@+id/textwallet"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Income Wallet"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/cardReperWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shapeeee"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_xml"
                        android:orientation="vertical"

                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imgview_workingwallet"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/workingwallet" />

                        <TextView
                            android:id="@+id/textworkingwallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:text="Repurchase Wallet"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#6bf2c2"
                    app:cardCornerRadius="@dimen/fragment_title_padding_10">

                    <LinearLayout
                        android:id="@+id/cardPinMaster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_xml"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/imgview_pinmaster"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"

                                android:layout_weight="3"
                                android:src="@drawable/pinmaster" />

                            <TextView
                                android:id="@+id/txt_pinmaster"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Pin Master"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#0a91c2"
                        app:cardCornerRadius="@dimen/fragment_title_padding_10">

                        <LinearLayout
                            android:id="@+id/cardNewUpdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/selector_xml"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:weightSum="4">

                                <ImageView
                                    android:id="@+id/imgview_newsandupdates"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:src="@drawable/news" />

                                <TextView
                                    android:id="@+id/txt_news"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="News and Updates"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/cardTopUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shapeeee"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_xml"

                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imgview_topup"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/topup1" />

                        <TextView
                            android:id="@+id/texttopup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:text="TopUp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rightreseved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="All Rights Reserved @ Techno Funda Research"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

</RelativeLayout>
