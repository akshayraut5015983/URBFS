<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_d"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:id="@+id/news_detials_title"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:id="@+id/news_detials_image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:id="@+id/news_update_desc"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightreseved"
        android:text="All Rights Reserved @ SRS Marketing"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="9sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textSize="9sp" />
</LinearLayout>